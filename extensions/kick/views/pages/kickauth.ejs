<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="/kick/styles/kickstyle.css">
</head>

<body>
    <div id="messages"></div>
    <!-- page now auto redirects to kick auth via javascript -->
    <script>
        let tempStorage = {
            host: '<%= host %>',
            port: '<%= port %>',
            clientId: '<%= clientId %>',
            kickApplicationSecret: '<%= kickApplicationSecret %>',
            kickOAuthState: '<%= kickOAuthState %>',
            kickOAuthVerifier: '<%= kickOAuthVerifier %>',
            kickOAuthChallenge: '<%= kickOAuthChallenge %>',
            scopes: '<%= scopes %>',
            userType: '<%= userType %>',
            authorized: false
        };
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.0.5/socket.io.js' type='text/javascript'></script>
    <script src="/streamroller-message-api.cjs"></script>
    <script src="/kick/scripts/callback.js"></script>
    <script src="/kick/scripts/kickauth.js"></script>
</body>